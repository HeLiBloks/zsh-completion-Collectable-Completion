#compdef airbase-ng


_arguments -s '-0[set all WPA,WEP,open tags. cant be used with -z & -Z]'\
  '-A[Ad-Hoc Mode (allows other clients to peer)]'\
  '-a[set Access Point MAC address]'\
  '--bssid[BSSID to filter/use]:BSSIDs:'\
  '--bssids[read a list of BSSIDs out of that file]:file:_files'\
  '-C[enables beaconing of probed ESSID values (requires -P)]'\
  '-c[sets the channel the AP is running on]'\
  '--client[MAC of client to filter]:macaddres:'\
  '--clients[read a list of MACs out of that file]:file:_files'\
  '--essid[specify a single ESSID (default: default)]'\
  '--essids[read a list of ESSIDs out of that file]'\
  '-f[disallow specified client MACs (default: allow)]:macaddres:'\
  '-F[write all sent and received frames into pcap file]'\
  '-h[source mac for MITM mode]:macaddres:'\
  '--help[Displays this usage screen]'\
  '-i[capture packets from this interface]'\
  '-I[sets the beacon interval value in ms]'\
  '-L[Caffe-Latte WEP attack (use if driver cant send frags)]'\
  '-N[cfrag WEP attack (recommended)]'\
  '-P[respond to all probes, even when specifying ESSIDs]'\
  '-q[quiet (do not print statistics)]'\
  '-s[force shared key authentication (default: auto)]'\
  '-S[set shared key challenge length (default: 128)]:length:( 128 )'\
  '-V[fake EAPOL 1=MD5 2=SHA1 3=auto]'\
  '-v[verbose (print more messages)]'\
  '-W[\[dont\] set WEP flag in beacons 0|1 (default: auto)]:WEP flag:( 0 1 auto )'\
  '-w[use this WEP key to en-/decrypt packets]:key:'\
  '-X[hidden ESSID]'\
  '-x[number of packets per second (default: 100)]:packets per second:'\
  '-y[disables responses to broadcast probes]'\
  '-Y[external packet processing]'\
  '-z[sets WPA1 tags. 1=WEP40 2=TKIP 3=WRAP 4=CCMP 5=WEP104]:WPA1 tags:( 1 2 3 4 5 )'\
  '-Z[sets WPA2 tags ]:WPA2 tags:( 1 2 3 4 5 )'

