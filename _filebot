#compdef filebot

_arguments -s '--action[Rename action]:rename action:( move  copy  keeplink  symlink  hardlink  test )'\
  '--conflict[Conflict resolution]:conflict resolution:(override  skip  auto  index  fail)'\
  '--db[Database]:database:((\
    TheTVDB\:"Series mode"\
    AniDB\:"Series mode"\
    TheMovieDB\:"Movie mode"\
    OMDb\:"Movie mode"\
    AcoustID\:"Music mode"\
    ID3\:"Music mode" ))'\
  '--def[Define script variables]:value:'\
  '--encoding[Output character encoding]:encodeing:(utf-8 Windows-1252)'\
  '--filter[Filter expression]:expression:'\
  '--format[Format expression]:expression:'\
  '--lang[language code]:language:(de en es fr ja zh)'\
  '--log-file[Log file]:file:_files'\
  '--log-lock[Lock log file]'\
  '--log[Log level]:log level:(all fine info warning )'\
  '--mode[Subtitles, SFV or Open GUI in single panel mode]'\
  '--order[Episode order]:order:(airdate Absolute DVD)'\
  '--output[Output path]:path:{_files /-}'\
  '--q[force movie or series name]:search query:'\
  '-check[Create/Check verification files]'\
  '-clear-cache[Clear cached and temporary data]'\
  '-clear-prefs[Clear application settings]'\
  '-extract[Extract archives]'\
  '-get-subtitles[Fetch subtitles]'\
  '(- 1 :)-help[Print help message]'\
  '-list[Fetch episode list]'\
  '-mediainfo[Get media info]'\
  '-no-xattr[Disable extended attributes]'\
  '-non-strict[Enable advanced matching and more]'\
  '-r[Recursively process folders]'\
  '-rename[Rename media files]'\
  '-revert[Revert files]'\
  '-script[Run Groovy script]'\
  '-unixfs[Do not strip invalid characters from]'\
  '(- 1 :)-version[Print version identifier]'\
  '*:filename:_files'
