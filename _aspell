#compdef aspell


_arguments -s '-a[compatibility mode]'\
  '--add[|rem-context-delimiters=<str> context delimiters (separated by spaces)]'\
  '--add[|rem-dict-alias=<str>  create dictionary aliases]'\
  '--add[|rem-email-quote=<str> email quote characters]'\
  '--add[|rem-extra-dicts=<str> extra dictionaries to use]'\
  '--add[|rem-filter-path=<str> path(s) aspell looks for filters]'\
  '--add[|rem-filter=<str>      add or removes a filter]'\
  '--add[|rem-html-check=<str>  HTML attributes to always check]'\
  '--add[|rem-html-skip=<str>   HTML tags to always skip the contents of]'\
  '--add[|rem-sgml-check=<str>  SGML attributes to always check]'\
  '--add[|rem-sgml-skip=<str>   SGML tags to always skip the contents of]'\
  '--add[|rem-sug-split-char=<str> characters to insert when a word is split]'\
  '--add[|rem-tex-command=<str> TeX commands]'\
  '--add[|rem-texinfo-ignore-env=<str> Texinfo environments to ignore]'\
  '--add[|rem-texinfo-ignore=<str> Texinfo commands to ignore the parameters of]'\
  '--add[|rem-variety=<str>     extra information for the word list]'\
  '-b[|-x,--\[dont-\]backup       create a backup file by appending ".bak"]'\
  '-C[|-B,--\[dont-\]run-together consider run-together words legal]'\
  '-c[|check <file>  to check a file]'\
  '--conf-dir[location of main configuration file]'\
  '--conf[main configuration file]'\
  {-d,--master}'[base name of the main dictionary to use]'\
  {-D,--mode}'[enter Debctrl mode.]'\
  '--data-dir[location of language data files]'\
  '--dict-dir[location of the main word list]'\
  {-e,--mode}'[enter Email mode.]'\
  '--email-margin[num chars that can appear before the quote char]'\
  '--encoding[encoding to expect data to be in]'\
  {-H,--mode}'[enter HTML mode.]'\
  '--home-dir[location for personal files]'\
  '--keyboard[keyboard definition to use for typo analysis]'\
  '--keymapping[keymapping for check mode: "aspell" or "ispell"]'\
  {-l,--lang}'[language code]'\
  '--local-data-dir[location of local language data files]'\
  '-m[|-P,--\[dont-\]guess        create missing root/affix combinations]'\
  '--mode[filter mode]'\
  {-n,--mode}'[enter Nroff mode.]'\
  '--norm-form[Unicode normalization form: none, nfd, nfc, comp]'\
  {-p,--personal}'[personal dictionary file name]'\
  '--per-conf[personal configuration file]'\
  '--prefix[prefix directory]'\
  '--repl[replacements list file name]'\
  '--run-together-limit[maximum number that can be strung together]'\
  '--run-together-min[minimal length of interior words]'\
  '--size[size of the word list]'\
  '--sug-edit-dist[edit distance to use, override sug-mode default]'\
  '--sug-mode[suggestion mode]'\
  {-t,--mode}'[enter TeX mode.]'\
  '-v[prints a version line]'\
  {-W,--ignore}'[ignore words <= n chars]'\
  '*:filename:_files'
